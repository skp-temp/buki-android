<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/small_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="152:180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/message_item_layout_margin">

            <LinearLayout
                android:id="@+id/friend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/space1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/friend_profile_picture"
                    android:layout_width="@dimen/message_item_profile_picture_size"
                    android:layout_height="@dimen/message_item_profile_picture_size"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/circle_user_profile_picture"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/name"
                    style="@style/small_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/date"
                    style="@style/x_small_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

            </LinearLayout>

            <!-- h = 12 / 180 = 0.07 -->
            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/message"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friend_layout" />

            <TextView
                android:id="@+id/message"
                style="@style/medium_small_regular_text_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/gray_800"
                app:layout_constraintBottom_toTopOf="@+id/space2"
                app:layout_constraintDimensionRatio="128:100"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space1" />

            <Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/gift_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/message_item_gift_image_margin"
            android:visibility="gone">

            <ImageView
                android:id="@+id/gift"
                android:layout_width="@dimen/message_item_gift_icon_size"
                android:layout_height="@dimen/message_item_gift_icon_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_gift" />

            <ImageView
                android:id="@+id/gift_background"
                android:layout_width="@dimen/message_item_gift_background_size"
                android:layout_height="@dimen/message_item_gift_background_size"
                android:background="@drawable/circle_message_gift" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>