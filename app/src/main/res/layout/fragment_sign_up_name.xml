<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 56 / 760 -->
        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/name_input_text"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 20 / 760 -->
        <TextView
            android:id="@+id/name_input_text"
            style="@style/large_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_input"
            app:layout_constraintBottom_toTopOf="@+id/space2"
            app:layout_constraintTop_toBottomOf="@+id/space1" />

        <!-- 32 / 760 -->
        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_layout"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintTop_toBottomOf="@+id/name_input_text" />

        <!-- w = 360 - 24 - 24 -->
        <!-- h = 48 / 760 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/space3"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintTop_toBottomOf="@+id/space2">

            <!-- 120 / 312 -->
            <EditText
                android:id="@+id/last_name_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/last_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/edit_space"
                app:layout_constraintWidth_percent="0.38" />

            <!-- 12 / 312 -->
            <Space
                android:id="@+id/edit_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toRightOf="@+id/last_name_edit"
                app:layout_constraintRight_toLeftOf="@+id/first_name_edit" />

            <!-- 180 / 312 -->
            <EditText
                android:id="@+id/first_name_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/first_name"
                app:layout_constraintLeft_toRightOf="@+id/edit_space"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.57" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>