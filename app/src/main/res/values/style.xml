<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_button_style">
        <item name="android:layout_width">@dimen/toolbar_button</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar_action_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/toolbar_button</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="large_text_style">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="toolbar_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="input_box_message_style">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:layout_marginStart">@dimen/input_box_message_start_margin</item>
        <item name="android:layout_marginTop">@dimen/input_box_message_top_margin</item>
    </style>

    <style name="small_text_style">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="BottomDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomDialog</item>
    </style>

    <style name="BottomDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="switch_text_style">
        <item name="android:textSize">@dimen/switch_text_size</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="bold_medium_text_style">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="medium_small_text_style">
        <item name="android:textSize">@dimen/text_medium_small_size</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="x_small_text_style">
        <item name="android:textSize">@dimen/text_x_small_size</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="bottom_dialog_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_dialog_height</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="notification_text_style">
        <item name="android:textSize">@dimen/text_medium_small_size</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

</resources>